.row
  .col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
    %h2 
      Please Sign up
      %small It's free and always will be
    = form_for(:user, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .row
        .col-xs-6.col-sm-6.col-md-6
          .form-group
            = f.text_field :first_name, class: "form-control input-lg", placeholder: "First Name", autofocus: true
        .col-xs-6.col-sm-6.col-md-6
          .form-group  
            = f.text_field :last_name, class: "form-control input-lg", placeholder: "Last Name"
      .row
        .col-xs-12.col-sm-12.col-md-12
          .form-group
            = f.email_field :email, class: "form-control input-lg", placeholder: "Email"
      .row
        .col-xs-6.col-sm-6.col-md-6
          .form-group
            = f.password_field :password, class: "form-control input-lg", autocomplete: "off", placeholder: "Password"
        .col-xs-6.col-sm-6.col-md-6
          .form-group
            = f.password_field :password_confirmation, class: "form-control input-lg", autocomplete: "off", placeholder: "Confirm Password"
      .actions
        = f.submit "Sign up", class: "btn btn-primary btn-block btn-lg"
    = render "users/shared/links"