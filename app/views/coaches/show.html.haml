.row
  .col-xs-12.col-sm-8.col-md-6.col-sm-offset-1
    %span
      %h3
        =@coach.full_name
        .stars-big{:"data-score" => @coach.rating, style:"display:inline; margin-left:10px"}

    =image_tag @coach.get_img, width: "200px", height: "200px"
    /%p#notice=notice
    %p
      %strong Started:
      =@coach.started

    %p
      %strong Gender:
      =@coach.gender

    %p
      %strong School:
      =link_to @coach.school.name, school_path(@coach.school)

      -@coach.reviews.order('updated_at DESC').each do |review|
        %li.list-group-item
          %h4.list-group-item-heading
            =image_tag @coach.get_img, width: "32[x", height: "32px"
            =link_to @coach.full_name, coach_path(@coach)
            .stars-big{:"data-score" => review.coach.rating, style:"display:inline; margin-left:10px"}
            %small="#{@coach.num_ratings} reviews"
          %br
          %span.list-group-item-text
            -t = review.text
            =truncate(t, length: 500)
            -if t.length > 500
              =link_to "See more", coach_review_path(@coach, review)
    =link_to 'Edit', edit_coach_path(@coach)
    |
    =link_to 'Back', coaches_path
  .col-xs-12.col-sm-8.col-md-4.col-sm-offset-1
    =link_to 'Write a Review', new_coach_review_path(@coach), class: "btn btn-primary btn-lg"



